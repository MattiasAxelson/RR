        <Button x:Name="SaveButton" Content="Save Current Data" HorizontalAlignment="Left" Height="27" Margin="451,194,0,0" VerticalAlignment="Top" Width="109" Click="button_Click"/>
        <Button x:Name="settingsangle" Content="Settings angle" HorizontalAlignment="Left" Height="23" Margin="451,226,0,0" VerticalAlignment="Top" Width="109"/>

    </Grid>
</Window>
